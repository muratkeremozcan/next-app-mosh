generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  followers Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
}

model Product {
  id        Int      @id @default(autoincrement()) 
  name      String
  price     Int
  createdAt DateTime @default(now())
}